{
  "endOfLine": "lf",

  "overrides": [
    {
      "files": "*.{ts,tsx,js,json}",
      "options": {
        "parser": "typescript",
        "printWidth": 80,
        "tabWidth": 2,
        "trailingComma": "none",
        "singleQuote": false,
        "useTabs": false,
        "semi": false,
        "arrowParens": "avoid",
        "quoteProps": "as-needed",
        "bracketSpacing": true,
        "bracketSameLine": false
      }
    },
    {
      "files": "*.css",
      "options": {
        "printWidth": 80,
        "tabWidth": 2,
        "singleQuote": false
      }
    }
  ]
}
